---
import Layout from "../layouts/Layout.astro"
import Greeting from "../components/Greeting.jsx"

const pageTitle = "首页"
---

<Layout title={pageTitle}>
  <h2>我的 Astro 站点</h2>
  <Greeting client:load messages={["Hej", "Hallo", "Hola", "Habari"]} />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
</style>
